<body id="body-pd">
  <header class="header" id="header">
    <div class="header_toggle"> <i class='bx bx-menu' id="header-toggle"></i> </div>
    <div class="header_notify"> <i class='bx bx-bell' id="header-notify"></i> </div>
  </header>
  
  <div class="l-navbar" id="nav-bar">
    <nav class="nav">
      <div>
          <a href="#" class="nav_logo"> <i class='bx bx-book-reader nav_logo-icon'></i> <span class="nav_logo-name">E-learn</span> </a>
        <div class="nav_list">
            <a href="/" class="nav_link"> <i class='bx bx-grid-alt nav_icon'></i> <span class="nav_name">Dashboard</span> </a>             
            <a href="/subject" class="nav_link"> <i class='bx bx-book nav_icon'></i> <span class="nav_name">Subject</span> </a> 
            <a href="/calendar" class="nav_link"> <i class='bx bx-calendar nav_icon'></i> <span class="nav_name">Calendar</span> </a> 
            <a href="#" class="nav_link"> <i class='bx bx-medal nav_icon'></i> <span class="nav_name">Achievements</span> </a> 
            <a href="#" class="nav_link"> <i class='bx bx-user nav_icon'></i> <span class="nav_name">Users</span> </a> 
        </div>
      </div> 
            <a href="#" class="nav_link"> <i class='bx bx-log-out nav_icon'></i> <span class="nav_name">SignOut</span> </a>
    </nav>
  </div>
  <div class="height-100">
    <div class="height-100">
      <h4>Subject</h4>
      <div class="addSubject" id="addSubjectBtn"><i class='bx bx-plus'></i>Add Subject</div>
    </div>
    <!-- Container Main end -->
    
    <!-- Modal for adding subject -->
    <div class="modal fade" id="addSubjectModal" tabindex="-1" aria-labelledby="addSubjectModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="addSubjectModalLabel">Add Subject</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <form id="subjectForm" action="/subject" method="POST">
              <div class="mb-3">
                <label for="subID" class="form-label">Subject ID</label>
                <input type="text" class="form-control" id="subID" required>
              </div>
              <div class="mb-3">
                <label for="subName" class="form-label">Subject Name</label>
                <input type="text" class="form-control" id="subName" required>
              </div>
              <button type="submit" class="btn btn-primary">Submit</button>
            </form>
          </div>
        </div>
      </div>
    </div>


</body>

<script src="/javascripts/dashboard.js"></script>
